<h1>Favorite Games</h1>

<form>
  <p>
    <label for="title">Title</label>
    <input type="text" name="title" id="title">
  </p>
  <button id="addGame">Add Game</button>
</form>

<ol id="games">
  {{#each games}}
  <li>
    {{this.title}}
    <button class="deleteGame" data-id="{{this.id}}">X</button>
  </li>
  {{/each}}
</ol>

<script src="./game.js"></script>
